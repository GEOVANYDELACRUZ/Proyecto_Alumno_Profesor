<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txvComentario"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Mensaje largo que puede contener hasta 255 caracteres. Puedes ajustar esto segÃºn tus necesidades."
            android:maxLines="5"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curso"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txvCriterio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criterio de la Nota"
            android:layout_weight="3"
            android:padding="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txvNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Nota"
            android:padding="5dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_responder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Responder"
            android:padding="5dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txvResp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Respuesta"
            android:padding="8dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
